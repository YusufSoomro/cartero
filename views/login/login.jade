extends ../layout/layout

block content
  h1= title
  if error && error.length > 0
    p.errorMessage= error
  
  if info && info.length > 0
    p.infoMessage=  info
  
  form(action="/login", method="post")
    div
      label Username:
      input(type="text", name="username")
    div
      label Password:
      input(type="password", name="password")
    div
      input(type="submit")
      
